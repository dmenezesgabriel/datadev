{
    "name": "datadev",
    "dockerComposeFile": "../docker-compose.yaml",
    "service": "datadev",
    // "runServices": [
    //     "datadev",
    //     "localstack"
    // ],
    "workspaceFolder": "/app",
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
            "version": "latest",
            "moby": false,
            "dockerDashComposeVersion": "v2"
        },
        "ghcr.io/devcontainers/features/common-utils": {
            "installZsh": true,
            "installOhMyZsh": true,
            "installOhMyZshConfig": true,
            "configureZshAsDefaultShell": true
        },
        "ghcr.io/devcontainers-extra/features/zsh-plugins:0": {
            "plugins": "zsh-autosuggestions zsh-syntax-highlighting",
            "omzPlugins": "https://github.com/zsh-users/zsh-autosuggestions.git https://github.com/zsh-users/zsh-syntax-highlighting.git"
        },
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "shutdownAction": "stopCompose",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "ms-azuretools.vscode-docker",
                "ms-python.black-formatter",
                "ms-python.autopep8",
                "ms-python.isort",
                "ms-python.mypy-type-checker",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "humao.rest-client",
                "streetsidesoftware.code-spell-checker",
                "streetsidesoftware.code-spell-checker-portuguese-brazilian",
                "Catppuccin.catppuccin-vsc",
                "Catppuccin.catppuccin-vsc-icons",
                "naumovs.color-highlight",
                "hediet.vscode-drawio",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "bierner.markdown-mermaid",
                "bierner.markdown-preview-github-styles",
                "shardulm94.trailing-spaces",
                "redhat.vscode-yaml",
                "mikestead.dotenv",
                "tamasfe.even-better-toml",
                "ms-vscode-remote.remote-containers",
                "google.colab"
            ],
            "settings": {
                // Git
                "git.ignoreMissingGitWarning": true,
                "git.openRepositoryInParentFolders": "never",
                // Telemetry
                "telemetry.editStats.details.enabled": false,
                "telemetry.editStats.enabled": false,
                "telemetry.editStats.showDecorations": false,
                "telemetry.editStats.showStatusBar": false,
                "telemetry.feedback.enabled": false,
                "redhat.telemetry.enabled": false,
                // General
                "breadcrumbs.enabled": false,
                "workbench.editor.enablePreview": false,
                "markdown.styles": [
                    ".vscode/markdown/style.css"
                ],
                //  Window
                "window.zoomLevel": 0,
                "window.commandCenter": false,
                "workbench.layoutControl.enabled": false,
                "window.title": "${folderName}/${activeEditorShort}",
                //  Editor
                "editor.codeLens": false,
                "editor.accessibilitySupport": "off",
                "editor.copyWithSyntaxHighlighting": false,
                "editor.formatOnSave": true,
                "editor.formatOnPaste": true,
                "editor.formatOnType": true,
                "editor.rulers": [
                    80,
                    120
                ],
                "editor.renderLineHighlight": "gutter",
                "editor.fontLigatures": true,
                "editor.semanticHighlighting.enabled": false,
                "editor.minimap.enabled": false,
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": "explicit"
                },
                "editor.unicodeHighlight.ambiguousCharacters": false,
                "editor.suggestSelection": "first",
                "editor.guides.bracketPairs": true,
                "editor.guides.highlightActiveIndentation": true,
                "editor.guides.bracketPairsHorizontal": "active",
                "editor.suggestOnTriggerCharacters": true,
                "editor.bracketPairColorization.enabled": true,
                "editor.inlineSuggest.enabled": true,
                "editor.unicodeHighlight.invisibleCharacters": false,
                "editor.quickSuggestions": {
                    "comments": "on",
                    "strings": "on",
                    "other": "on"
                },
                "editor.autoClosingBrackets": "always",
                "editor.smoothScrolling": false,
                // Fonts
                "editor.fontFamily": "'JetBrains Mono', monospace",
                "editor.fontSize": 14,
                "editor.lineHeight": 1.8,
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                // Explorer
                "explorer.compactFolders": false,
                "explorer.sortOrder": "foldersNestsFiles",
                "workbench.activityBar.location": "default",
                "explorer.fileNesting.enabled": true,
                "explorer.fileNesting.patterns": {
                    "tsconfig.json": "tsconfig.*.json",
                    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
                    ".env": ".env*",
                    ".prettierrc": ".prettier*",
                    "eslint.config.mjs": ".eslint*"
                },
                "files.exclude": {
                    "**/.classpath": true,
                    "**/.project": true,
                    "**/.settings": true,
                    "**/.factorypath": true
                },
                //  Search
                "search.exclude": {
                    "**/node_modules": true,
                    "**/bower_components": true,
                    "**/env": true,
                    "**/venv": true
                },
                // Tabs
                "workbench.editor.labelFormat": "short",
                // "workbench.editor.showTabs": "none",
                // Terminal
                "terminal.integrated.fontSize": 14,
                "terminal.integrated.fontFamily": "'JetBrains Mono', monospace",
                "terminal.integrated.gpuAcceleration": "on",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "bash",
                        "icon": "terminal-bash"
                    },
                    "zsh": {
                        "path": "zsh",
                        "icon": "terminal-bash"
                    }
                },
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.automationProfile.linux": {
                    "path": "tmux",
                    "args": [
                        "new-session",
                        "-A",
                        "-s",
                        "vscode:${workspaceFolder}"
                    ]
                },
                // Files
                "files.trimTrailingWhitespace": true,
                "files.associations": {
                    ".env.*": "dotenv",
                    ".prettierrc": "json",
                    "*.css": "css",
                    ".dev.vars": "dotenv",
                    "*.mdx": "markdown"
                },
                // Emmet
                "emmet.triggerExpansionOnTab": true,
                "emmet.excludeLanguages": [],
                "emmet.includeLanguages": {
                    "javascript": "javascriptreact",
                    "mdx": "javascriptreact",
                    "vue-html": "html",
                    "markdown": "html",
                    "svelte": "html"
                },
                "emmet.syntaxProfiles": {
                    "javascript": "jsx",
                    "mdx": "jsx"
                },
                // Notebook
                "jupyter.serverType": "local",
                "jupyter.allowUnauthorizedRemoteConnection": true,
                "notebook.formatOnSave.enabled": true,
                "notebook.codeActionsOnSave": {
                    "source.organizeImports": "explicit"
                },
                "notebook.output.textLineLimit": 200,
                "notebook.output.scrolling": true,
                "notebook.compactView": true,
                "notebook.diff.overviewRuler": true,
                "notebook.lineNumbers": "on",
                // Python
                "python.defaultInterpreterPath": "/opt/python/bin/python",
                "python.analysis.typeCheckingMode": "standard",
                "isort.args": [
                    "--profile",
                    "black"
                ],
                "black-formatter.args": [
                    "--line-length",
                    "79"
                ],
                // Javascript
                "javascript.updateImportsOnFileMove.enabled": "always",
                "javascript.suggest.autoImports": true,
                "javascript.autoClosingTags": true,
                // Typescript
                "typescript.updateImportsOnFileMove.enabled": "always",
                "typescript.suggest.autoImports": true,
                "typescript.autoClosingTags": true,
                "typescript.preferences.preferTypeOnlyAutoImports": true,
                // HTML
                "html.format.wrapAttributes": "force-expand-multiline",
                "html.format.wrapLineLength": 80,
                "html.autoClosingTags": true,
                // Languages
                "[jsonc]": {
                    "editor.defaultFormatter": "vscode.json-language-features"
                },
                "[json]": {
                    "editor.defaultFormatter": "vscode.json-language-features"
                },
                "[python]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 4,
                    "editor.insertSpaces": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll.eslint": "explicit",
                        "source.organizeImports": "explicit"
                    },
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnSave": true
                },
                "[sql]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 2,
                    "editor.insertSpaces": true
                },
                "[yaml]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 2,
                    "editor.insertSpaces": true,
                    "editor.autoIndent": "advanced"
                },
                "[yml]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 2,
                    "editor.insertSpaces": false,
                    "editor.autoIndent": "advanced"
                },
                "[dockercompose]": {
                    "editor.autoIndent": "advanced"
                },
                "[html]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 2,
                    "editor.insertSpaces": true,
                    "editor.defaultFormatter": "vscode.html-language-features"
                },
                "[jsp]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 2,
                    "editor.insertSpaces": true
                    // "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[trex]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 2,
                    "editor.insertSpaces": true,
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[tag]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 2,
                    "editor.insertSpaces": true,
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[xml]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 2,
                    "editor.insertSpaces": true,
                },
                "[javascript]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 2,
                    "prettier.printWidth": 80,
                    "editor.insertSpaces": true,
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "prettier.bracketSameLine": false,
                    "prettier.bracketSpacing": true,
                },
                "[typescript]": {
                    "editor.detectIndentation": false,
                    "editor.tabSize": 2,
                    "editor.insertSpaces": true,
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[markdown]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.tabSize": 4,
                    "editor.insertSpaces": true
                },
                "[terraform][terraform-vars]": {
                    "editor.defaultFormatter": "hashicorp.terraform",
                    "editor.formatOnSave": false,
                    "editor.codeActionsOnSave": {
                        "source.formatAll.terraform": "explicit"
                    }
                },
                // Spelling
                "cSpell.language": ",pt,pt_BR,en_US",
                "cSpell.enabled": true,
                "cSpell.enabledFileTypes": {
                    "asciidoc": true,
                    "c": true,
                    "cpp": true,
                    "csharp": true,
                    "css": true,
                    "git-commit": true,
                    "go": true,
                    "graphql": true,
                    "handlebars": true,
                    "haskell": true,
                    "html": true,
                    "jade": true,
                    "java": true,
                    "javascript": true,
                    "javascriptreact": true,
                    "json": true,
                    "jsonc": true,
                    "latex": true,
                    "less": true,
                    "markdown": true,
                    "md": true,
                    "php": true,
                    "plaintext": true,
                    "python": true,
                    "pug": true,
                    "restructuredtext": true,
                    "rust": true,
                    "scala": true,
                    "scss": true,
                    "text": true,
                    "typescript": true,
                    "typescriptreact": true,
                    "yaml": true,
                    "yml": true,
                    "ipynb": true,
                    "jupyter": true
                },
                "cSpell.enabledSchemes": {
                    "file:": true,
                    "gist:": true,
                    "sftp:": true,
                    "untitled:": true,
                    "ipynb": true
                },
                // Mkdocs
                "yaml.schemas": {
                    "https://squidfunk.github.io/mkdocs-material/schema.json": "mkdocs.yml"
                },
                "yaml.customTags": [
                    "!ENV scalar",
                    "!ENV sequence",
                    "!relative scalar",
                    "tag:yaml.org,2002:python/name:material.extensions.emoji.to_svg",
                    "tag:yaml.org,2002:python/name:material.extensions.emoji.twemoji",
                    "tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format"
                ]
            }
        }
    },
    "postCreateCommand": "uv pip list",
    "forwardPorts": [
        8888,
        8889,
        4040,
        4566
    ]
}